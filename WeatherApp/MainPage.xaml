<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage"
             Title=""
             BackgroundImageSource="city_background.jpg">
    
    <!-- main weather page -->
    <Grid ColumnDefinitions="*,*,*">
        <VerticalStackLayout Grid.Column="1" BackgroundColor="#052940">
            <Label 
                HorizontalTextAlignment="Center"
                Margin="50"
                Text="Weather App"
                FontAttributes="Bold"/>

            <Image x:Name="TempIcon" Source="placeholder_circle.png" MaximumHeightRequest="200"/>

            <Entry x:Name="CityEntry" Placeholder="Enter Your City's Name" FontSize="Large" HorizontalTextAlignment="Center"/>

            <Button x:Name="WeatherButton" 
                    Text="Get Weather"
                    LineBreakMode="WordWrap"
                    Margin="25, 15, 25, 40"
                    Clicked="WeatherButton_Clicked"/>

            <Label x:Name="Temperature" HorizontalOptions="Center" Margin="20"/>
            <Label x:Name="Description" HorizontalOptions="Center" Margin="20"/>
            <Label x:Name="Humidity" HorizontalOptions="Center" Margin="20"/>
            <Label x:Name="WindLocal" HorizontalOptions="Center" Margin="20"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>