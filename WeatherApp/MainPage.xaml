<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage">
    <!-- main weather page -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Weather App" FontSize="Title" HorizontalOptions="Center" VerticalOptions="Center" />

        <StackLayout Grid.Row="1">
            <Label Text="Enter a city name" FontSize="Large" />
            <Entry x:Name="cityEntry" Placeholder="City name" FontSize="Large" Text="L6L2H4,CA" />
        </StackLayout>


    </Grid>

</ContentPage>